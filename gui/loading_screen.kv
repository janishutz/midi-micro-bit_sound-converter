TrackChooseScreen:
    name: "Track"
    md_bg_color: app.theme_cls.accent_color
    GridLayout:
        cols:1
        Label:
            text: "Track selection"
            font_size: 30
            bold: True
            italic: True
            color: (50, 50, 255, 1)
        FloatLayout:
            MDRaisedButton:
                size: "200dp", "50dp"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                on_release: root.show_dropdown(self)
                size_hint: 0.7, 0.2
                pos_hint: {"x": 0.15, "y":0.5}
                text: "Select a track"
        Button:
            text: "confirm"
            background_color: app.theme_cls.primary_color
            on_release:
                root.extract()
