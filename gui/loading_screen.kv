TrackChooseScreen:
    name: "Track"
    md_bg_color: app.theme_cls.accent_color
    GridLayout:
        cols:1
        Label:
            text: "Track selection"
            font_size: 30
            bold: True
            italic: True
            color: (50, 50, 255, 1)
        FloatLayout:
            Spinner:
                id: track_spinner
                size_hint: 0.7, 0.2
                pos_hint: {"x": 0.15, "y":0.5}
                background_color: (0, 0, 0, 1)
                text: "Select a track"
                values: ["Test"]
        Button:
            text: "confirm"
            background_color: app.theme_cls.primary_color
            on_release:
                root.extract()